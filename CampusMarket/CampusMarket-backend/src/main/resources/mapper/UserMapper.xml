<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.backend.repository.UserMapper">

    <sql id="Base_Column_List">
        id, username, password, email
    </sql>

    <select id="findByUsername" resultType="com.backend.entity.User">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE username = #{username}
    </select>

    <select id="findById" resultType="com.backend.entity.User">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE id = #{id}
    </select>

    <select id="existsByUsername" resultType="int">
        SELECT COUNT(id)
        FROM users
        WHERE username = #{username}
    </select>

    <select id="findByIdSimple" resultType="com.backend.entity.User">
        SELECT
            id, username, email
        FROM users
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.backend.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, email)
        VALUES (#{username}, #{password}, #{email})
    </insert>

</mapper>